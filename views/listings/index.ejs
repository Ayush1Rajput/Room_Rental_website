<% layout("/layouts/boilerplate") %>

<h3>All listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4 mt-3">
  <% for (let listing of allListings) { %>
  <div class="col">
    <a
      href="/listings/<%= listing._id %>"
      class="text-decoration-none text-dark"
    >
      <div class="card h-100 listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="<%= listing.title %>"
          style="height: 16rem; object-fit: cover"
        />
        <div class="card-img-overlay" style="color: aliceblue">
          Rental Webpage
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text mb-0">
            â‚¹<%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info text-muted" style="font-size: 0.9em">
              +18% GST</i
            >
          </p>
          <small class="text-muted"
            ><%= listing.location %>, <%= listing.country %></small
          >
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
