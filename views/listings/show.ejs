<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-2">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="Image" />
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b>
      </p>

      <%= listing.description %> <br />
      &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
      <!-- use for local indian currency -->
      <%= listing.location %> <br />
      <%= listing.country %> <br />
    </div>
  </div>
  <br />
  <div class="btns d-flex gap-2 mt-3 offset-2">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3">
    <h4>Write a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea cols="25" rows="5" id="comment" name="review[comment]" class="form-control"></textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>
